{% trans_default_domain 'FOSUserBundle' %}



{% block body %}
    <div id="fade-bg"></div>
    <div class="container margin-top-100">
        <h2>Welcome, login here</h2>
        <div class="panel panel-default col-md-7 col-md-push-3 col-ms-7 col-ms-push-3" id="login-panel">
            <div class="panel-body">
                <div class="text-center">
                    <span id="login-icon" class="fa fa-user"></span>
                </div>
                <form method="post" action="{{ path("fos_user_security_check") }}" > <!-- id="loginForm" -->
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <label for="username">
                        Enter your username
                    </label>
                    <div class="input-group">
					<span class="input-group-addon">
						<span class="fa fa-user"></span>
					</span>
                        <input type="text" class="half-input form-control"  id="username" name="_username" value="" required="required" autocomplete="username"/>
                    </div>

                    <label for="password" class="margin-top-10">
                        Enter password
                    </label>
                    <div class="input-group">
					<span class="input-group-addon">
						<span class="fa fa-lock"></span>
					</span>
                        <input type="password" class="half-input form-control" id="password" name="_password" required="required" autocomplete="current-password"/>
                    </div>

                    <div class="margin-top-10">
                        <button id="_submit" name="_submit" value="Log in" type="submit" class="btn btn-success">Login</button>
                    </div>
                </form>
                {% if error %}
                    <div class="alert alert-danger text-center margin-top-10">
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                {% endif %}
                <div class="col-md-10 bg-info margin-top-10">
                    <p class="text-warning">Do not have an Account?</p>
                    <a class="text-info btn"><a href="{{url('fos_user_registration_register')}}">Register here</a></p>
                </div>
            </div>
            <div class="progress margin-top-10">
                <div class="progress-bar progress-bar-success" role="progressbar" style="width:25%">
                </div>
                <div class="progress-bar progress-bar-default" role="progressbar" style="width:25%">
                </div>
                <div class="progress-bar progress-bar-warning" role="progressbar" style="width:25%">
                </div>
                <div class="progress-bar progress-bar-danger" role="progressbar" style="width:25%">
                </div>
            </div>

        </div>


{% endblock %}