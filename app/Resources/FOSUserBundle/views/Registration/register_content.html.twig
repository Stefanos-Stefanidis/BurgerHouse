{% trans_default_domain 'FOSUserBundle' %}
{% block body %}

<div class="container margin-top-100">
    <h2>Welcome, register here</h2>
    <div class="panel panel-default col-md-7 col-md-push-3 col-ms-7 col-ms-push-3">
        <div class="panel-body">

            <form action="{{ path('fos_user_registration_register') }}" method="POST">
                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
                {{ form_errors(form.email) }}
                <br />
                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
                {{ form_errors(form.username) }}
                <br />
                {{ form_widget(form.lastname, { 'attr': {'class': 'form-control', 'placeholder': 'lastname'|trans } }) }}
                {{ form_errors(form.lastname) }}
                <br />
                {{ form_widget(form.phone, { 'attr': {'class': 'form-control', 'placeholder': 'phone'|trans } }) }}
                {{ form_errors(form.phone) }}
                <br />
                {{ form_widget(form.address, { 'attr': {'class': 'form-control', 'placeholder': 'address'|trans } }) }}
                {{ form_errors(form.address) }}
                <br />
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
                {{ form_errors(form.plainPassword.first) }}
                <br />
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
                {{ form_errors(form.plainPassword.second) }}

                {{ form_rest(form) }}
                <br />
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="{{ 'registration.submit'|trans }}">
            </form>
        </div>
        <div class="progress margin-top-10">
            <div class="progress-bar progress-bar-success" role="progressbar" style="width:25%">
            </div>
            <div class="progress-bar progress-bar-default" role="progressbar" style="width:25%">
            </div>
            <div class="progress-bar progress-bar-warning" role="progressbar" style="width:25%">
            </div>
            <div class="progress-bar progress-bar-danger" role="progressbar" style="width:25%">
            </div>
        </div>
    </div>
</div>
{% endblock %}