<div class="container">
  <div class="row">
    <div class="margin-top-50">
      <h1 class="text-center">Offers</h1>
      <div class="margin-top-10 grid-offers">
        {% for uuid in offersUuids %}
        {% set firstPrice = 0 %}
        {% set totalPrevPrice = 0 %}
        <div class="panel padding-10 flex-offers-panel">
          <div class="products">
            {% for offer in allOffers %}
            {% if offer.offer == uuid.offer %}
            <p>{{offer.product.name}}</p>
            {% set firstPrice = offer.price %}
            {% set totalPrevPrice = totalPrevPrice + offer.product.price %}
            {% endif %}
            {% endfor %}
          </div>
          <div class="prices">
            <p class="btn-xs btn btn-success fa fa-plus" data-offer="{{uuid.offer}}" onClick="addOfferToBasket('{{uuid.offer}}')" style="margin-bottom: 10px;"></p>
            <div class="old-price circle-text">{{totalPrevPrice}}</div>
            <div class="new-price circle-text">{{firstPrice}}</div>
          </div>
        </div>
        {% endfor %}
