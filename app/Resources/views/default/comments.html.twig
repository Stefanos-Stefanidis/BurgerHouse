{% extends 'base.html.twig' %}

{% block body %}
<div id="wait"><i class="fa fa-spinner fa-pulse fa-4x fa-fw"></i></div>

	<div class="container margin-top-100" >
		<h2>Add your comment here</h2>
		<div class="row">
		<div class="jumbotron">
			<div class="container">
				<div class="row">
					<div class="form-group">
					    <label for="usernameComment">username</label>
					    <input type="text" class="form-control" id="usernameComment" placeholder="username">
					  </div>
					  <div class="form-group">
					    <label for="commentBox">Comment</label>
					    <textarea type="text" class="form-control" id="commentBox" rows="5"></textarea>
					  </div>

					  <button id="addComment" type="submit" class="btn btn-default">Submit</button>
				</div>
			</div>
		</div>
		</div>
	</div>
	<div id="test">
	<div class="container margin-top-100" id="loadAjax">
		<div class="row">
			{% for comment in comments%}
				<p id="username-comment">{{comment.name}} 
					<span id="comment-label"> has commented</span>
				</p>
				<p id="comment">{{comment.comment}}</p>
			{% endfor%}


		</div>
				
	</div>
	</div>
{% endblock %}
