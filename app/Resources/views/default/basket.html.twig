{% extends 'base.html.twig' %}

{% block body %}
<div class="panel panel-default margin-top-100 container">

	<div class="container margin-top-10">
		{% set totalPrice = 0 %}
		{% for item in items  %}
		{% set totalPrice = totalPrice + item.price %}
		 <div class="col-md-8 col-sm-8 col-xs-10"> 
			<h4>{{item.prname}}  </h4>
		</div>
		 <div class="col-md-1 col-sm-8 col-xs-10"> 
			<h4>{{item.price}}&euro;</h4>
		</div>
		<div class="col-md-3">
			<p id="dlt-product" ><a href="delete/{{item.id}}" class="fa fa-trash fa-2x"></a></p>
		</div>
	{% endfor %}
	
	</div>
	<hr>
	{% for flash in app.session.flashbag.get('notice') %}
		<div class="text-center alert alert-danger" id="fadeMsg">
			{{flash}}
		</div>
	{% endfor%}
	<p class="pull-right">Total price {{ totalPrice }}&euro; </p>
</div>
<div class="container margin-top-10 ">
	<p class="text-info">Want something extra!?</p>
	<div class="col-md-6 col-md-push-2">
		<textarea class="form-control" rows="3"></textarea>
	</div>
	<div class="col-md-12 margin-top-10">
		<button class="btn btn-success pull-right">Send order</button>
	</div>		
</div>

{% endblock %}
