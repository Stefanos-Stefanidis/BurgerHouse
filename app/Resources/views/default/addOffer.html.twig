{% extends 'admin.html.twig' %}

{% block body %}
<div>
	<button class="fa fa-chevron-right fa-2x btn btn-default" aria-hidden="true" id="menu-btn"></button>
</div>
<div class="container">
	<div class="row">
		<h1>Add your offers here</h1>
		<div class="margin-top-100">
			<div class="col-md-4">
				<h1 class="fa fa-gift fa-10x text-danger"></h1>
				<a class="btn-xs btn btn-primary" href="createOffer/1">Edit</a>
				<div class="panel">
					{% for offer in offers1%}
						<h3> {{offer.product}}</h3>
					{% endfor%}
				</div>
				<div class="panel col-xs-2 pull-right">
					{% set totalPrice1 = 0 %}
					{% for offer in offers1  %}
						{% set totalPrice1 = totalPrice1 + offer.times %}
					{% endfor %}
					<h4>{{totalPrice1}}&euro;</h4>
				</div>
			</div>
			
			<div class="col-md-4">
				<h1 class="fa fa-gift fa-10x text-success"></h1>
				<a class="btn-xs btn btn-primary" href="createOffer/2">Edit</a>
				<div class="panel">
					{% for offer in offers2%}
					<h3> {{offer.product}}</h3>
					{% endfor%}
				</div>
				<div class="panel col-xs-2 pull-right">
					{% set totalPrice2 = 0 %}
					{% for offer in offers2  %}
						{% set totalPrice2 = totalPrice2 + offer.times %}
					{% endfor %}
					<h4>{{totalPrice2}}&euro;</h4>
				</div>
			</div>		
			
			<div class="col-md-4">
				<h1 class="fa fa-gift fa-10x text-info"></h1>
				<a class="btn-xs btn btn-primary" href="createOffer/3">Edit</a>
				<div class="panel">
					{% for offer in offers3%}
					<h3> {{offer.product}}</h3>
					{% endfor%}
				</div>
				<div class="panel col-xs-2 pull-right">
					{% set totalPrice3 = 0 %}
					{% for offer in offers3  %}
						{% set totalPrice3 = totalPrice3 + offer.times %}
					{% endfor %}
					<h4>{{totalPrice3}}&euro;</h4>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}