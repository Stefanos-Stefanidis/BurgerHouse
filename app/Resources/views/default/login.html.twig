{% extends 'clean.html.twig' %}

{% block body %}
<div id="fade-bg"></div>
<div class="container margin-top-100">
	<h2>Welcome login here</h2>
	<div class="panel panel-default col-md-7 col-md-push-3 col-ms-7 col-ms-push-3" id="login-panel">
		<div class="panel-body">
			<div class="text-center">
				<span id="login-icon" class="fa fa-user"></span>
			</div>
			<form method="post" action="login">
				<label for="username">
					Enter your email
				</label>
				<div class="input-group">
					<span class="input-group-addon">
						<span class="fa fa-envelope "></span>
					</span>
					<input type="text" class="half-input form-control" name="username" placeholder="Enter email" />
				</div>

				<label for="password" class="margin-top-10">
					Enter password 
				</label>
				<div class="input-group">
					<span class="input-group-addon">
						<span class="fa fa-lock"></span>
					</span>
					<input type="password" class="half-input form-control" name="password" placeholder="Enter password" />
				</div>

				<div class="margin-top-10 ">
					<button name ="loginBtn"  class= "btn btn-success">Login</button>
				</div>
				{% for flash in app.session.flashbag.get('notice') %}
    				<div class="text-center alert alert-danger" id="fadeMsg">
    					{{flash}}
    				</div>
				{% endfor %}
				<div class="col-md-10 bg-info margin-top-10">
					<p class="text-warning">Do not have an Account?</p>
					<p class="text-info btn" id="show-register">Register here</p>
				</div>

			</form>
		</div>
		<div class="progress margin-top-10">
			<div class="progress-bar progress-bar-success" role="progressbar" style="width:25%">
			</div>
			<div class="progress-bar progress-bar-default" role="progressbar" style="width:25%">
			</div>
			<div class="progress-bar progress-bar-warning" role="progressbar" style="width:25%">
			</div>
			<div class="progress-bar progress-bar-danger" role="progressbar" style="width:25%">
			</div>
		</div>

	</div>
	<!--  register panel -->
	<div id="register-panel" class="container margin-top-100">
        <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Please register here 
			    			<span id="close-register" class="pull-right fa fa-times"></span>
			    		</h3>
			 			</div>
			 			<div class="panel-body">
			    		<form method="post" action="add-user" id="registerForm">
			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			                <input type="text" name="firstName" id="first_name" class="form-control input-sm" placeholder="First Name">
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input type="text" name="lastName" id="last_name" class="form-control input-sm" placeholder="Last Name">
			    					</div>
			    				</div>
			    			</div>

			    			<div class="form-group">
			    				<input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address">
			    			</div>

			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password">
			    					</div>
			    				</div>
			    			</div>
							<div class="text-center alert alert-danger" id="regMsg" >
									<div id="test"></div>
    						</div>
			    		</form>
			    			<input type="submit" id="register" name="register" value="Register" class="btn btn-info btn-block">
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>
</div>


{% endblock %}