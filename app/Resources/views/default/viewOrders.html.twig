{% extends 'admin.html.twig' %}

{% block body %}
    <div>
        <button class="fa fa-chevron-right fa-2x btn btn-default" aria-hidden="true" id="menu-btn"></button>
    </div>


    {% if productUuids|length > 0 %}
    {% set orderNum = 0 %}
    {% for uuid in productUuids %}
        {% set orderNum = orderNum +1 %}

        <div class="text-right width-100">


            <div class="btn btn-labeled btn-default">
                <span class="btn-label">
                    <i class="fa fa-chevron-circle-left"></i>
                </span>
                <a href="/view-order/{{ uuid.noticeId }}">Order.{{ orderNum }}</a>

            </div>
            <br>
        </div>

    {% endfor %}
    <div class="container">
        <div id="order-panel" class="jumbotron ">
            <div class="col-md-6">
                {% for notice in notices %}
                    <p>{{notice.productId.name}} x {{notice.quantity}} </p>
                    {% if notice.comment is not null %}
                        <p class="comment text-info">({{notice.comment}})</p>
                    {% endif %}
                {% endfor %}
     
                {% if notices|length > 0 %}
                    <div class="container col-xs-4">
                        <div class="row bg-info">
                            <h4 class="">Total Price: {{ noticesInfo.orderSum }}&euro;</h4>
                        </div>
                    </div>
                {% endif %}
            </div>
                <div class="col-md-6 bg-success">
                    <br>
                    {% if notices|length > 0 %}
                        <h4 class="col-md-6">{{ noticesInfo.address }}</h4>
                        <h4 class="col-md-6">{{ noticesInfo.area }}</h4>
                        <h4 class="col-md-6">{{ noticesInfo.floor }}</h4>
                        <h4 class="col-md-6">{{ noticesInfo.postCode }}</h4>
                        <h4 class="col-md-6">{{ noticesInfo.ringName }}</h4>
                    {% endif %}
                </div>
                <div class="col-md-4  pull-right margin-top-50">
                    <p>Order send at:</p>
                    <div class="panel col-md-6">
                        {% if notices|length > 0 %}
                            <span class="bg-info">{{ noticesInfo.dateOrder|date("d/m/y") }}</span> -
                            <span class="bg-warning">{{ noticesInfo.dateOrder|date("h:i:s") }}</span>
                        {% endif %}
                    </div> 
                </div>
            {% if notices|length > 0 %}
                <div class="col-xs-12">
                        <h3>Extra:</h3>
                        <h2 class="panel descr-panel">{{ noticesInfo.extra }}</h2>
                </div>
                <div class="col-xs-6 ">
                        <a href="/cancel-order/{{ noticesInfo.noticeId }}" class="btn btn-danger">Order Cancel</a>
                </div>
                <div class="col-xs-6">
                        <a href="/finish-order/{{ noticesInfo.noticeId }}" class="btn btn-primary  pull-right">Order finished</a>
                </div>
            {% endif %}
        </div>
    </div>
    {% else %}
        <h1 class="text-center text-danger">No Orders</h1>
    {% endif %}

{% endblock %}